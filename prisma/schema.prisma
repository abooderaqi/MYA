generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Collection {
  id          String    @id
  title       String    @unique
  description String
  image       String    @unique
  updatedAt   DateTime
  createdAt   DateTime  @default(now())
  products    Product[] @relation("CollectionToProduct")
}

model Product {
  id          String       @id
  description String
  price       Float
  createdAt   DateTime     @default(now())
  updatedAt   DateTime
  category    String
  colors      String[]
  expense     Float        @default(0.1)
  media       String[]
  tags        String[]
  title       String
  sizes       String[]
  collection  Collection[] @relation("CollectionToProduct")
  orders      Order[]      @relation("OrderToProduct")
}

model User {
  clerkId   String    @unique
  wishlist  String[]  @default([])
  createdAt DateTime  @default(now())
  updatedAt DateTime
  role      USER_ROLE @default(USER)
  orders    Order[]
}

model Order {
  id              String    @id @default(uuid())
  totalAmount     Int
  createdAt       DateTime  @default(now())
  updatedAt       DateTime
  shippingAddress Json
  userId          String
  quantity        Int[]
  user            User      @relation(fields: [userId], references: [clerkId])
  products        Product[] @relation("OrderToProduct")
}

enum USER_ROLE {
  ADMIN
  USER
}
